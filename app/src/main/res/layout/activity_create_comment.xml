<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCommentActivity">
    <TextView
        android:id="@+id/title"
        android:text="Viết Bình Luận"
        android:background="@drawable/hotel"
        android:textColor="#FFF"
        android:textSize="40dp"
        android:gravity="center"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ImageView
        android:id="@+id/img"
        android:src="@drawable/img"
        android:scaleType="fitXY"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/title"
        android:layout_marginTop="20dp"
        android:layout_width="100dp"
        android:layout_height="100dp"/>
    <TextView
        android:id="@+id/name"
        android:text="AAAAAAAAAAAAAA"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/img"
        android:layout_alignTop="@id/img"
        android:layout_marginLeft="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <TextView
        android:id="@+id/detail"
        android:text="5 sao \nĐà nẵng\n 4.7/5  + 99 lượt đặt\n 2,500,000đ - 4,555,000đ "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name"
        android:layout_alignLeft="@+id/name"
        android:layout_marginTop="5dp"
        />
    <RatingBar
        android:id="@+id/rate"
        android:numStars="5"
        android:stepSize="1"
        android:layout_below="@id/img"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/text_input_layout"
        android:layout_below="@+id/rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:hintEnabled="true"
        app:hintTextAppearance="@style/TextAppearance.App.TextInputLayout">
    <EditText
        android:id="@+id/type"
        android:layout_below="@id/rate"
        android:background="@drawable/createcomment"
        android:layout_alignLeft="@id/img"
        android:layout_marginRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"/>
    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
        android:id="@+id/camera"
        android:src="@drawable/camera"
        android:layout_below="@id/text_input_layout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="50dp"
        android:layout_width="70dp"
        android:layout_height="70dp"/>
    <TextView
        android:id="@+id/add"
        android:text="Thêm ảnh"
        android:layout_marginLeft="3dp"
        android:layout_below="@id/camera"
        android:layout_alignLeft="@id/camera"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/send"
        android:text="Gửi"
        android:textSize="25dp"
        android:layout_toRightOf="@id/camera"
        android:layout_alignTop="@id/camera"
        android:layout_alignBottom="@id/camera"
        android:layout_marginLeft="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


</RelativeLayout>