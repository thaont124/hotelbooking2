<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/customer_info_layout"
    android:background="@drawable/rounded_border"
    android:padding="16dp"
    android:layout_marginBottom="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/invoiceTitleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="THÔNG TIN KHÁCH HÀNG"
        android:textColor="@color/purple"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/customerNameTextView"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="Tên khách hàng: Nguyễn Văn A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/cccdTextView"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="CCCD/Hộ chiếu: 1234567890"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/emailTextView"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="CCCD/Hộ chiếu: 1234567890"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/phoneNumberTextView"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="CCCD/Hộ chiếu: 1234567890"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dateBookingTextView"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="CCCD/Hộ chiếu: 1234567890"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dateCheckinTextView"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="CCCD/Hộ chiếu: 1234567890"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/dateCheckoutTextView"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="CCCD/Hộ chiếu: 1234567890"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/payStatusTextView"
        android:layout_width="345dp"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="CCCD/Hộ chiếu: 1234567890"
        android:textColor="@android:color/black"
        android:textSize="16sp" />

</LinearLayout>

